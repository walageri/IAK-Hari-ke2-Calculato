<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blogspot.programer27android.calculator.MainActivity">
    <!--android:background="@drawable/backgroundabtrack"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator Sederhana"
        android:textSize="35sp"
        android:textColor="#ff0004"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <android.support.design.widget.TextInputLayout
        app:passwordToggleEnabled="true"
        android:id="@+id/edt1"
        android:textColorHint="#ff0202"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/batas1"
        android:layout_marginRight="@dimen/batas1"
        android:layout_marginTop="@dimen/batas1">
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/Masukkananggka"
        android:textColorHint="#ff0202"
        android:id="@+id/editText1"
        android:layout_marginTop="@dimen/batas1"
        android:layout_marginLeft="@dimen/batas1"
        android:layout_marginRight="@dimen/batas1"
        android:layout_centerHorizontal="true">
    </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        app:passwordToggleEnabled="true"
        android:id="@+id/edt2"
        android:textColorHint="#ff0202"
        android:layout_width="match_parent"
        android:layout_below="@+id/edt1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/batas1"
        android:layout_marginRight="@dimen/batas1"
        android:layout_marginTop="@dimen/batas1">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/Masukkananggka"
            android:textColorHint="#ff0202"
            android:id="@+id/editText2"
            android:layout_marginTop="@dimen/batas1"
            android:layout_marginLeft="@dimen/batas1"
            android:layout_marginRight="@dimen/batas1"
            android:layout_centerHorizontal="true">
        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/Hitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Hasil"
        android:id="@+id/editText3"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/Hitung"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
